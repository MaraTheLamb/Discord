# __________________________________________________
# Filter
# __________________________________________________

filters__filter_domains=true
filters__filter_everyone_ping=true
filters__filter_invites=true
filters__filter_zalgo=false
filters__watch_regex=true
filters__watch_rich_embeds=true

# Notify user on filter?
# Notifications are not expected for "watchlist" type filters
filters__notify_user_domains=false
filters__notify_user_everyone_ping=true
filters__notify_user_invites=true
filters__notify_user_zalgo=false

# Filter configuration
# How many days before deleting an offensive message?
filters__offensive_msg_delete_days=7
filters__ping_everyone=true
