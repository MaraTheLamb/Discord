# __________________________________________________
# Big brother
# __________________________________________________

big_brother__header_message_limit=15
big_brother__log_delay=15

# __________________________________________________
# Code block
# __________________________________________________

# Sending instructions triggers a cooldown on a per-channel basis.
# More instruction messages will not be sent in the same channel until the cooldown has elapsed.
code_block__cooldown_seconds=300

# The minimum amount of lines a message or code block must have for instructions to be sent.
code_block__minimum_lines=4

# __________________________________________________
# Free
# __________________________________________________

# Seconds to elapse for a channel to be considered inactive.
free__activity_timeout=600
free__cooldown_per=60.0
free__cooldown_rate=1

# __________________________________________________
# Help channels
# __________________________________________________

help_channels__enable=true

# Allowed duration of inactivity before archiving a help post
help_channels__idle_minutes=30

# Allowed duration of inactivity when post is empty (due to deleted messages)
# before archiving a help post
help_channels__deleted_idle_minutes=5

# __________________________________________________
# Redirect output
# __________________________________________________

redirect_output__delete_delay=15
redirect_output__delete_invocation=true

# __________________________________________________
# Duck pond
# __________________________________________________

duck_pond__threshold=7

# __________________________________________________
# Python News
# __________________________________________________

python_new=['python-ideas', 'python-announce-list', 'pypi-announce', 'python-dev']

# __________________________________________________
# Voice gate
# __________________________________________________

voice_gate__bot_message_delete_delay=10  # Seconds before deleting bot's response in Voice Gate
voice_gate__minimum_activity_blocks=3  # Number of 10 minute blocks during which a user must have been active
voice_gate__minimum_days_member=3  # How many days the user must have been a member for
voice_gate__minimum_messages=50  # How many messages a user must have to be eligible for voice
voice_gate__voice_ping_delete_delay=60  # Seconds before deleting the bot's ping to user in Voice Gate

# __________________________________________________
# Branding
# __________________________________________________

# How many days bot wait before refreshing server icon
branding__cycle_frequency=3

# __________________________________________________
# Video permissions
# __________________________________________________

# Default duration for stream command in minutes
video_permission__default_permission_duration=5

# __________________________________________________
# Anti Spam
# __________________________________________________

anti_spam__cache_size=100

# Clean messages that violate a rule.
anti_spam__clean_offending=true
anti_spam__ping_everyone=true

anti_spam__punishment__remove_after=600

# Attachments
anti_spam__rules__attachments__interval=10
anti_spam__rules__attachments__max=10

# Burst
anti_spam__rules__burst__interval=10
anti_spam__rules__burst__max=7

# Burst shared it (temporarily) disabled to prevent
# the bug that triggers multiple infractions/DMs per
# user. It also tends to catch a lot of innocent users
# now that we're so big.
# burst_shared:
#    interval: 10
#    max: 20

# Chars
anti_spam__rules__chars__interval=5
anti_spam__rules__chars__max=4_200
# Discord emojis
anti_spam__rules__discord_emojis__interval=10
anti_spam__rules__discord_emojis__max=20
# Duplicates
anti_spam__rules__duplicates__interval=10
anti_spam__rules__duplicates__max=3

# Links
anti_spam__rules__links__interval=10
anti_spam__rules__links__max=10

# Mentions
anti_spam__rules__mentions__interval=10
anti_spam__rules__mentions__max=5

# Newlines
anti_spam__rules__newlines__interval=10
anti_spam__rules__newlines__max=100
anti_spam__rules__newlines__max_consecutive=10

# Role mentions
anti_spam__rules__role_mentions__interval=10
anti_spam__rules__role_mentions__max=3

# __________________________________________________
# Anti Spam
# __________________________________________________

redis__host="redis.default.svc.cluster.local"
redis__port=6379
redis__use_fakeredis=false

# __________________________________________________
# Clean messages
# __________________________________________________
clean__message_limit=10000

# __________________________________________________
# Stats
# __________________________________________________

stats__presence_update_timeout=300
stats__statsd_host="graphite.default.svc.cluster.local"

# __________________________________________________
# Cool downs
# __________________________________________________
cooldowns__tags=60


# __________________________________________________
# Metabase
# __________________________________________________
metabase__base_url="http://metabase.default.svc.cluster.local"
metabase__public_url="https://metabase.pythondiscord.com"
metabase__max_session_age=20160

# __________________________________________________
# URLs
